#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int m=5;
    int n=5;
    for(int c=1;c<=m;c++)
    {
        for(int r=1;r<=c;r++)
        {
            cout<<"* ";
        }
        cout<<endl;
    }
    return 0;
}




output:
* 
* * 
* * * 
* * * * 
* * * * * 
